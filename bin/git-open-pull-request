#!/usr/bin/env ruby

BRANCH_REGEX = /(?<branch>(?<slug>(?<team_slug>[A-Z]+)(-(?<ticket_number>\d+)?))\/(?<feature_name>.*)|.*)?/
BRANCH = `git rev-parse --abbrev-ref HEAD`
MATCHES =
  BRANCH
  .match(BRANCH_REGEX)
  .named_captures
  .transform_keys!(&:to_sym)

file = Tempfile.new

begin
  slug = MATCHES[:slug] || ''
  ticket_number = MATCHES[:ticket_number] || '1123'
  title = (MATCHES[:feature_name] || 'title').gsub(/[_-]/, ' ').capitalize
  ticket_link = "https://carwow.kanbanize.com/ctrl_board/8/cards/#{ticket_number}/details"

  template = <<~COMMIT_MSG
    [#{slug}] #{title}

    Related: [#{slug}](#{ticket_link})
  COMMIT_MSG

  file.write(template)
  file.flush

  system("hub pull-request --edit --copy --browse --assign=CGA1123 --file=#{file.path}")
ensure
  file.close!
end
